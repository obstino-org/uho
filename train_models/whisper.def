Bootstrap: library
From: ubuntu:20.04

%files
	requirements.txt /home/requirements.txt

%post
    apt-get update && apt-get install -y \
    wget \
    vim \
	nano \
    git \
    python3 \
    python3-pip \
	&& python3 -m pip install --upgrade pip \
	&& python3 -m  pip install -r /home/requirements.txt \
	&& git config --global credential.helper store

%environment
    export LC_ALL=C
    export LANG=C.UTF-8

%runscript
	cd /home
    echo "Hello from container."
    echo "Current directory is ${PWD}"

%labels
    Author Blaz Kovacic
    Version v1.1
